{
  "id": "openclaw-self-healing",
  "name": "OpenClaw Self Healing",
  "version": "0.2.5",
  "description": "Self-healing health checks + guardrails + auto-fix for reversible failures (rate limits, auth errors, stuck session pins).",
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "modelOrder": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          "anthropic/claude-opus-4-6",
          "openai-codex/gpt-5.2",
          "google-gemini-cli/gemini-2.5-flash"
        ]
      },
      "cooldownMinutes": {
        "type": "number",
        "default": 300,
        "minimum": 1
      },
      "stateFile": {
        "type": "string",
        "default": "~/.openclaw/workspace/memory/self-heal-state.json"
      },
      "sessionsFile": {
        "type": "string",
        "default": "~/.openclaw/agents/main/sessions/sessions.json"
      },
      "configFile": {
        "type": "string",
        "default": "~/.openclaw/openclaw.json",
        "description": "Main OpenClaw config file (must remain valid JSON)."
      },
      "configBackupsDir": {
        "type": "string",
        "default": "~/.openclaw/backups/openclaw.json",
        "description": "Directory where automatic openclaw.json backups are stored."
      },
      "autoFix": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "patchSessionPins": {
            "type": "boolean",
            "default": true
          },
          "disableFailingPlugins": {
            "type": "boolean",
            "default": false
          },
          "disableFailingCrons": {
            "type": "boolean",
            "default": false
          },
          "restartWhatsappOnDisconnect": {
            "type": "boolean",
            "default": true
          },
          "whatsappDisconnectThreshold": {
            "type": "number",
            "default": 2,
            "minimum": 1,
            "maximum": 10
          },
          "whatsappMinRestartIntervalSec": {
            "type": "number",
            "default": 300,
            "minimum": 60
          },
          "cronFailThreshold": {
            "type": "number",
            "default": 3,
            "minimum": 1,
            "maximum": 20
          },
          "issueCooldownSec": {
            "type": "number",
            "default": 21600,
            "minimum": 300
          },
          "pluginDisableCooldownSec": {
            "type": "number",
            "default": 3600,
            "minimum": 60
          }
        }
      }
    }
  }
}